using System;
using NUnit.Framework;

namespace SoftwareMonkeys.csAnt.Tests.Scripting
{

    [TestFixture]
    public class ScriptingTestResultReturnerTestFixture : BaseScriptingTestFixture
    {
        [Test]
        public void Test_GetGroupPath()
        {
            var script = GetTestScript("Script1");
            var script2 = GetTestScript("Script2", script);
            var script3 = GetTestScript("Script3", script2);

            var returner = new ScriptingTestResultReturner(script3);

            var path = returner.GetGroupPath();

            var expected = "Script1/Script2";

            Assert.AreEqual(expected, path, "The group path isn't as expected.");
        }
    }
}


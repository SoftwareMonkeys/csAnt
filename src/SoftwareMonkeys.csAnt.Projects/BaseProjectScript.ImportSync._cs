using System;
using System.IO;

namespace SoftwareMonkeys.csAnt.Projects
{
	public partial class BaseProjectScript
	{
		public void ImportSync(string projectName)
		{
			var importedProjectPath = ImportedDirectory
				+ Path.DirectorySeparatorChar
					+ projectName;

			var patternsFile = importedProjectPath
				+ Path.DirectorySeparatorChar
					+ "patterns.txt";

			var patterns = File.ReadAllLines(patternsFile);

			foreach (var pattern in patterns)
			{
				Sync (CurrentDirectory, ImportedDirectory, pattern);
			}
		}
	}
}


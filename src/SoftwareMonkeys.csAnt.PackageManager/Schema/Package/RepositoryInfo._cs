using System;
using System.Xml;
using System.Xml.Serialization;

namespace SoftwareMonkeys.csAnt.PackageManager.Schema
{
    [Serializable]
    [XmlType("Repository")]
    public class RepositoryInfo
    {
        public string Name { get; set; }

        public string Path { get; set; }

        public RepositoryInfo (
            string name,
            string path
        )
        {
            Name = name;
            Path = path;
        }
    }
}

